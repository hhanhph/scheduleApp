{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/graphql.ts",
    "src/components/Schedule.js",
    "_document.js",
    "src/components/ImageCapture/ImageCapture.jsx",
    "src/components/ImageCapture/ImageCapture.jsx",
    "src/components/ImageCapture/ImageCapture.js",
    "public/indexdb.js"
, "public/idb.js", "src/components/PushNoti/PushNoti.jsx", "src/components/EditSection/EditSection.jsx", "src/components/SlideDrawer/SlideDrawer.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
